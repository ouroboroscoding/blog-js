{
	"__sql__": {
		"auto_primary": "UUID()",
		"changes": [ "user" ],
		"create": [
			"_created", "_updated", "_post", "_locale", "slug", "title",
			"content", "meta"
		],
		"db": "blog",
		"host": "blog",
		"indexes": {
			"post_locale": { "unique": [ "_post", "_locale" ] },
			"slug": { "unique": null }
		},
		"primary": "_id",
		"table": "blog_post_locale",
		"charset": "utf8mb4",
		"collate": "utf8mb4_unicode_ci"
	},

	"__name__": "Blog_Post_Locale",

	"_id": {
		"__type__": "uuid",
		"__optional__": true
	},

	"_created": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "not null default CURRENT_TIMESTAMP"
		}
	},

	"_updated": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "not null default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP"
		}
	},

	"_post": {
		"__type__": "uuid"
	},

	"_locale": {
		"__type__": "string",
		"__regex__": "^[a-z]{2}-[A-Z]{2}$",
		"__sql__": {
			"type": "char(5)"
		}
	},

	"slug": {
		"__type__": "string",
		"__maximum__": 128,
		"__regex__": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
		"__sql__": {
			"type": "varchar(128)"
		}
	},

	"title": {
		"__type__": "string",
		"__maximum__": 255
	},

	"content": {
		"__type__": "string",
		"__maximum__": 65535,
		"__ui__": {
			"type": "html"
		}
	},

	"meta": {
		"__hash__": {
			"__type__": "string",
			"__options__": [ "description", "image", "title", "url" ]
		},
		"__type__": "string",
		"__sql__": {
			"json": true
		}
	}
}