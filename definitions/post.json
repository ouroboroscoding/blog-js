{
	"__sql__": {
		"auto_primary": false,
		"create": [ "_slug", "_raw", "_created", "_updated", "content" ],
		"db": "blog",
		"host": "blog",
		"indexes": {
			"_raw": null
		},
		"primary": "_slug",
		"table": "blog_post",
		"charset": "utf8mb4",
		"collate": "utf8mb4_bin"
	},

	"__name__": "Blog_Post",

	"_slug": {
		"__type__": "string",
		"__maximum__": 128,
		"__regex__": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
		"__sql__": {
			"type": "varchar(128)"
		}
	},

	"_raw": {
		"__type__": "uuid"
	},

	"_created": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "not null default CURRENT_TIMESTAMP"
		}
	},

	"_updated": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "not null default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP"
		}
	},

	"content": {
		"__type__": "string",
		"__maximum__": 20000,
		"__sql__": {
			"type": "text"
		}
	}
}